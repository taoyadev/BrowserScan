{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@browserscan/types": ["packages/types/src"],
      "@browserscan/ui": ["packages/ui/src"]
    }
  }
}
